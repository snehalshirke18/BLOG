                <div class="col-lg-4 mb-4">
                    {{#get "posts" filter="tag:automobile"}}
                        <p class="color-000 text-uppercase mb-30 ltspc-1">
                            <a href="/tag/automobile/">Automobile</a>
                            <i class="la la-angle-right ms-1"></i>
                        </p>
                        <div class="row">
                            <div class="col-12 brd-gray">
                                <div class="tc-post-grid-default">
                                    {{#foreach posts}}
                                        {{#if @first}}
                                            <div class="item">
                                                <div
                                                    class="img inner img-cover th-250"
                                                >
                                                    <img
                                                        src="{{feature_image}}"
                                                        alt=""
                                                    />
                                                </div>
                                                <div class="content pt-20">

                                                    <h4
                                                        class="title ltspc--1 mb-10"
                                                    >
                                                        <a
                                                            href="{{url}}"
                                                            class="hover-underline"
                                                        >
                                                            {{title}}
                                                        </a>
                                                    </h4>
                                                    <div class="text color-666">
                                                        {{excerpt words="12"}}
                                                    </div>
                                                    <div
                                                        class="meta-bot lh-1 mt-20"
                                                    >
                                                        <ul class="d-flex">
                                                            <li
                                                                class="date me-5"
                                                            >
                                                                <a
                                                                    href="{{url}}"
                                                                ><i
                                                                        class="la la-calendar me-2"
                                                                    ></i>
                                                                    <span
                                                                        class="gh-article-meta mb-1"
                                                                    >
                                                                        <time
                                                                            datetime="{{date
                                                                                format="YYYY-MM-DD"
                                                                            }}"
                                                                        >
                                                                            {{date
                                                                                format="D MMM YYYY"
                                                                            }}</time>
                                                                        {{!-- <span
                                                                            class="bull"
                                                                        >&bull;</span>
                                                                        {{reading_time}}
                                                                    </span> --}}
