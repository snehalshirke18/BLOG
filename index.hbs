{{!< default}}

<main class="container">
    <div class="gh-page">
        <div class="gh-container">
            <div class="gh-postfeed">
                <div class="container">
                    {{> "components/trending_tags"}}
                    <div class="section-content">
                        <div class="row">
                            <div class="col-lg-3">
                                {{> "components/hero_left"}}
                            </div>
                            <div class="col-lg-6">
                                    {{> post-slider}}
                            </div>
                            <div class="col-lg-3">
                                {{> post-trending}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            {{> "components/stories"}}

            {{> "components/news"}}

            {{> "components/2col_section"}}

            {{> "components/multi_section"}}

            {{!-- If JS isn't enabled, fallback to standard pagination --}}
            <noscript>
                <div class="gh-pagination">
                    {{pagination}}
                </div>
            </noscript>
        </div>
    </div>
</main>
